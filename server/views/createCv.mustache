<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="author" content="SemiColonWeb" />

	<!-- Stylesheets
	============================================= -->
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Raleway:300,400,500,600,700|Crete+Round:400i" rel="stylesheet" type="text/css" />
	<link rel="stylesheet" href="/css/bootstrap.css" type="text/css" />
	<link rel="stylesheet" href="/css/style.css" type="text/css" />
	<link rel="stylesheet" href="/css/dark.css" type="text/css" />
	<link rel="stylesheet" href="/css/font-icons.css" type="text/css" />
	<link rel="stylesheet" href="/css/animate.css" type="text/css" />
	<link rel="stylesheet" href="/css/magnific-popup.css" type="text/css" />
	<link rel="stylesheet" href="/css/calendar.css" type="text/css" />

	<link rel="stylesheet" href="/css/responsive.css" type="text/css" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<!-- Document Title
	============================================= -->
	<title>Create | Templaty</title>

	<style>

		#header .btn {
			margin: 33px 0 33px 15px;
			-webkit-transition: all .4s ease;
			-o-transition: all .4s ease;
			transition: all .4s ease;
		}
		
		#header.sticky-header .btn { margin: 13px 0 13px 15px; }
		
		@media (max-width: 991px) {
		
			#header .btn {
				position: absolute;
				margin: 0;
				top: 33px;
				left: auto;
				right: 15px;
			}
		
		}
		
		</style>

</head>

<body class="stretched" >

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper" class="clearfix" style="opacity:1!important">

		{{> header}}

		
		<!-- Content
		============================================= -->
		<section id="content" style="margin-top: 30px !important;">

			<div class="content-wrap">
	
				<div class="container clearfix">
					<form class="card row m-4" action="/resumes" method="POST">
						<div class="card-body col-12 ">
							<!-- <div class="nobottommargin" > -->
							<div class="row">
								<div class="col-12" >
									<label  for="title"><h3>Form Title</h3></label>
									<input type="name" name="title" class="form-control" />
								</div>
								<h3 class="col-12  ">Personal Informations</h3>
								<div class="col-6">
									<label for="[personalInfo][name]">Full Name:</label>
									<input type="text" name="personalInfo[name]" class="form-control" />
								</div>
			
								<div class="col-6">
									<label for="[personalInfo][job]">Job Title:</label>
									<input type="text" name="personalInfo[job]" class="form-control" />
								</div>
								<div class="col-6">
									<label for="email">Email:</label>
									<input type="email" name="personalInfo[email]" class="form-control" />
								</div>
								<div class="col-6">
									<label for="phone">Phone Number:</label>
									<input type="tel" name="personalInfo[phone]" class="form-control" />
								</div>
							</div>
							<div class="row">
								<h3 class="col-12   pt-3">Personal Description</h3>
								<div class="col-12">
									<textarea class="form-control" id="Textarea" rows="3" name="personalDescription[value]"></textarea>
								</div>
							</div>
							<div class="row">
								<h3 class="col-12   pt-3">Job Experince</h3>
								<div class="col-6" style="margin-bottom: 10px;">
									<label for="jobTitle">Job Title:</label>
									<input type="text" name="experience[0][title]" class="form-control" />
								</div>
								<div class="col-6">
									<label for="company">Company:</label>
									<input type="text" name="experience[0][company]" class="form-control" />
								</div>
								<div class="col-6">
									<label for="sDate">Start Date:</label>
									<input id="sDate" width="276" placeholder="dd/mm/yyyy" name="experience[0][startDate]" />
								
								</div>
								<div class="col-6">
									<label for="eDate">End Date:</label>
									<input id="eDate" width="276" placeholder="dd/mm/yyyy" name="experience[0][endDate]" />
									<script>
										
									</script>
								</div>
							</div>
							<div class="row parent">
								<h3 class="col-8 pt-3">Key Skills</h3>
								<div class="col-4">
									<button type="button" class="btn btn-primary" onclick="return addField(event,'skill')">
										+
									</button>
									<button type="button" class="btn btn-primary" onclick="return removeField(event,'skill')">
										-
									</button>
								</div>

								<div class="slots col-12">
									<div class="row">
										<div class="col-6">
											<label for="sTitle">Title:</label>
											<input type="text" name="skills[0][title]" class="form-control" />
										</div>
										<div class="col-6">
											<label>Description:</label>
											<input type="text" name="skills[0][description]" class="form-control" />
										</div>
									</div>

								</div>
								
							</div>
							<div class="row parent">
								<h3 class="col-8   pt-3">Education</h3>
								<div class="col-4">
									<button type="button" class="btn btn-primary" onclick="return addField(event,'education')">
										+
									</button>
									<button type="button" class="btn btn-primary" onclick="return removeField(event,'education')">
										-
									</button>
								</div>

								<div class="slots col-12">
									<div class="row">
										<div class="col-12" style="margin-bottom: 10px;">
											<label for="eTitle">Job Title:</label>
											<input type="text" name="education[0][title]" class="form-control" />
										</div>
										<div class="col-6">
											<label for="esDate">Start Date:</label>
											<input id="esDate" width="276" placeholder="dd/mm/yyyy" name="education[0][startDate]"/>
											
										</div>
										<div class="col-6">
											<label for="eeDate">End Date:</label>
											<input id="eeDate" width="276" placeholder="dd/mm/yyyy"name="education[0][endDate]"/>
											
										</div>
										<div class="col-12">
											<label for="eDescrep">Description:</label>
											<textarea class="required form-control textarea-message" rows="6" cols="30" name="education[0][description]"></textarea>
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-6" style="margin-top: 20px;">
									<button class="button button-3d button-black nomargin" id="" type="submit">Submit</button>
								</div>
							</div>
							<!-- </div> -->
						</div>
					</form>
					
				</div>
			</div>
		</section>

		{{> footer}}

	</div><!-- #wrapper end -->

	<!-- Go To Top
	============================================= -->
	<div id="gotoTop" class="icon-angle-up"></div>

	<!-- External JavaScripts
	============================================= -->
	<script
		src="https://code.jquery.com/jquery-3.5.1.min.js"
		integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
		crossorigin="anonymous"></script>
	<!-- <script src="/js/plugins.js" type="text/javacsript"></script> -->

	<!-- Footer Scripts
	============================================= -->
	<!-- <script src="/js/functions.js" type="text/javacsript"></script> -->

	<script>
		var templates = {
			'skill': `<div class="row">
							<div class="col-6">
								<label for="sTitle">Title:</label>
								<input type="text" name="skills[__counter__][title]" class="form-control" />
							</div>
							<div class="col-6">
								<label>Description:</label>
								<input type="text" name="skills[__counter__][description]" class="form-control" />
							</div>
						</div>`,
			
			'education': `  <div class="row">
								<hr class="col-12 mt-2" style="border:2px solid #000">
										<div class="col-12" style="margin-bottom: 10px;">
											<label for="eTitle">Job Title:</label>
											<input type="text" name="education[__counter__][title]" class="form-control" />
										</div>
										<div class="col-6">
											<label for="esDate">Start Date:</label>
											<input id="esDate" width="276" placeholder="dd/mm/yyyy" name="education[__counter__][startDate]"/>
											
										</div>
										<div class="col-6">
											<label for="eeDate">End Date:</label>
											<input id="eeDate" width="276" placeholder="dd/mm/yyyy"name="education[__counter__][endDate]"/>
											
										</div>
										<div class="col-12">
											<label for="eDescrep">Description:</label>
											<textarea class="required form-control textarea-message" rows="6" cols="30" name="education[__counter__][description]"></textarea>
										</div>
									</div>`,
		}
		function renderTemplate(id, template){
			var regex = new RegExp('__counter__', 'g') // global regex to replace all
			return template.replace(regex, id)
		}
		function addField(event, template){
			elm = event.target;
			var currentCount = 1;
			currentCount = $(elm).parents('.parent').find('.slots .row').length;

			var rendered = renderTemplate(currentCount , templates[template])
			$(elm).parents('.parent').find('.slots').append(
				rendered
			)
			event.preventDefault();
			event.stopPropagation();
			return false;
		}

		function removeField(event){
			elm = event.target;
			currentCount = $(elm).parents('.parent').find('.slots .row').length
			if(currentCount > 1){
				$(elm).parents('.parent').find('.slots .row:last-child').remove()
			}
			
			event.preventDefault();
			event.stopPropagation();
			return false;
		}

		$(document).ready(function() {
		});
	</script>

</body>
</html>