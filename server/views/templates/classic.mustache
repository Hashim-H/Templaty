<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />


	<link rel="stylesheet" type="text/css" href="//yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css" media="all" /> 
	<link rel="stylesheet" type="text/css" href="/css/classic.css" media="all" />
<style>
            @media print {
                * {margin:0;padding:0}
                @page {size: A4; margin:0mm;}
            }
        </style>

</head>
<body>

<div id="doc2" class="yui-t7">
	<div id="inner">
	
		<div id="hd">
			<div class="yui-gc">
				<div class="yui-u first">
					<h1>{{ resume.personalInfo.name }}</h1>
					<h2>{{ resume.personalInfo.job }}</h2>
				</div>

				<div class="yui-u">
					<div class="contact-info">
						<h3><a href="mailto:{{ resume.personalInfo.email }}">{{ resume.personalInfo.email }}</a></h3>
						<h3>{{ resume.personalInfo.phone }}</h3>
					</div>
				</div>
			</div>
		</div>

		<div id="bd">
			<div id="yui-main">
				<div class="yui-b">

					<div class="yui-gf">
						<div class="yui-u first">
							<h2>Personal Description</h2>
						</div>
						<div class="yui-u">
							<p class="enlarge">
								{{ resume.personalDescription.value }} 
							</p>
						</div>
					</div>

					<div class="yui-gf">
						<div class="yui-u first">
							<h2>Skills</h2>
						</div>
						<div class="yui-u">
								{{#resume.skills }}
									<div class="talent">
										<h2>{{ title }}</h2>
										<p>{{description}}</p>
									</div>
								{{/resume.skills }}
								
						</div>
					</div>

					<div class="yui-gf">
	
						<div class="yui-u first">
							<h2>Experience</h2>
						</div>

						<div class="yui-u">
							{{#resume.experience }}
							<div class="job">
								<h2>{{ company}}</h2>
								<h3>{{ title}}</h3>
								<h4>{{ startDate}}-{{ endDate}}</h4>
							</div>
							{{/resume.experience}}

						</div>
					</div>


					<div class="yui-gf last">
						<div class="yui-u first">
							<h2>Education</h2>
						</div>
						{{#resume.education }}
						<div class="yui-u">
							<h2>{{title}}</h2>
							<h3>{{description}}<strong>   {{ startDate}}-{{ endDate}}</strong> </h3>
						</div>
						{{/resume.education }}
					</div>


				</div>
			</div>
		</div>


	</div>


</div>

	<script
	src="https://code.jquery.com/jquery-3.5.1.min.js"
	integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
	crossorigin="anonymous"></script>
	<script>
		$(document).ready(function() {
			window.print();
		});
	</script>

</body>
</html>

